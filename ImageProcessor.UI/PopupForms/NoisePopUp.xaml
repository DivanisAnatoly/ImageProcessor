<Window x:Class="ImageProcessor.UI.PopupForms.NoisePopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessor.UI.PopupForms"
        mc:Ignorable="d"
        Title="NoisePopUp" Height="200" Width="400">
    <Grid  Background="#FF252526">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10,10,10,10">
            <Label Content="NoiseProbability" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
            <ComboBox Name="VNoiseProbability" Margin="0,0,0,0" Width="100" VerticalAlignment="Center">
            </ComboBox>
        </StackPanel>
        
        
        <Button x:Name="AcceptButton" Content="Accept" 
            HorizontalAlignment="Center"  VerticalAlignment="Center"
            Margin="0,0,0,5"
            Grid.Row="1"   
            Padding="5,2,5,2" Foreground="White" Background="#FF434346" FontSize="14" Click="AcceptButton_Click"/>
    </Grid>
</Window>
